@import '../../styles/variables.pcss';

.container {
  display: flex;
  height: 48px;

  align-items: center;
  justify-content: center;

  position: fixed;
  right: 0;
  bottom: 0;
  left: 0;

  background-color: var(--mainColor);
  
  box-shadow: 0 -2px 4px 0 rgba(0, 0, 0, .5);

  color: var(--whiteColor);
  font-family: 'Open Sans', 'sans-serif';
  font-size: 14px;
}